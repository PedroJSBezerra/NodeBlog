{{else}}

{{/each}}


<div class="card">
  <div class="card-body">
    <h4>Editar postagem</h4>
    <form action="/admin/postagem/edit" method="POST">
      <input type="hidden" value="{{postagem._id}}" name="id">
      <label for="titulo">Titulo: </label>
      <input type="text" name="titulo" class="form-control" required value="{{postagem.titulo}}">
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control" required  value="{{postagem.slug}}">
      <label for="descricao">Descrição: </label>
      <input type="text" name="descricao" class="form-control" required value="{{postagem.descricao}}">
      <label for="conteudo">Conteudo: </label>
      <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria">
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
      </select>
      <button class="btn btn-success mt-4" type="submit">Salvar edição</button>
    </form>
  </div>
</div>